<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"	
    android:background="@color/standard_gray_e2e2e0"
    android:layout_height="fill_parent" >
	
 
    
    
    <RelativeLayout 
    	android:id="@+id/rel01"
    	android:layout_below="@id/header"
    	android:paddingLeft="2dp"
    	android:paddingTop="2dp"
    	android:paddingRight="2dp"
    	android:paddingBottom="2dp"    	
    	android:layout_width="match_parent"
    	android:background="@color/grey"
        android:layout_height="fill_parent">
        <!--android:layout_height="320dp">-->
    
     
    <fragment
        android:id="@+id/gmap_addroutes"         
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"        
        android:layout_height="fill_parent">
        
      	  
    	</fragment>
    	
    	<AutoCompleteTextView
        android:id="@+id/search"        
        style="@style/search_buscode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="14dp"
        android:hint="@string/buscode" />
    	
    	<RelativeLayout 
    	android:id="@+id/frame_bus"
    	style="@style/busline_info"    
        android:layout_width="fill_parent"        
        android:layout_height="85dp"      
        
        android:orientation="horizontal" >

        
    	<ImageView
        android:id="@+id/profile_pic"
        android:background="@drawable/rounded_corner_favorites"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="2dp"
        android:layout_marginTop="6dp"                
        android:src="@drawable/bus_ver5"
        android:layout_marginRight="2dp" />

    <TextView
        android:id="@+id/busline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_pic"
        
        android:layout_marginTop="2dp"
        style="@style/BusLine"/>
        <!--  
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical" />-->

        <TextView
            android:id="@+id/buscode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/busline" 
            android:layout_toRightOf="@id/profile_pic"           
            android:layout_marginTop="2dp"
            
            android:textColor="@color/grey"/>
              
          
    
    <TextView
        android:id="@+id/people_connected"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"                
        android:layout_below="@id/buscode"
        android:layout_toRightOf="@id/profile_pic"
        android:textColor="@color/blue"        
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:singleLine="true"
        android:ellipsize="marquee" />    
    
    
    <TextView
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/profile_pic"        
        android:layout_below="@id/people_connected"
        android:textColor="@color/green"        
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:singleLine="true"
        android:lines="2"
        android:ellipsize="marquee" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/score_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        
        android:background="@color/black_transparent"
        android:padding="3dip" 
        android:orientation="horizontal">

    <TextView
        android:id="@+id/title"
        android:text="PONTUANDO!" 
        style="@style/status_text"/>

    <!-- Location -->

    <TextView
        android:id="@+id/location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="lalalalal" 
        android:layout_marginTop="1dip"
        
        android:textColor="#343434"
        android:textSize="10dip" />

    </RelativeLayout>	
    	
    </RelativeLayout>
    	





</RelativeLayout>