<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- most important is order of layers -->

<!-- Bottom right side 2dp Shadow -->
<item >
    <shape android:shape="rectangle">
        <solid android:color="@color/common_signin_btn_dark_text_disabled" />
        <corners android:radius="2dp" />
    </shape>
</item>

<!-- Bottom 2dp Shadow -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="@color/common_signin_btn_dark_text_disabled" />
        <corners android:radius="2dp" />
    </shape>
</item>

<!-- White Top color -->
<item android:bottom="1dp" android:right="1dp">
    <shape android:shape="rectangle">
        <solid android:color="@color/common_signin_btn_dark_text_default" />
        <corners android:radius="2dp" />
    </shape>
</item>
</layer-list>